<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VCMessanger.Pages.ChatPage"
             Title="Ваш Чат">
    <VerticalStackLayout Padding="10" VerticalOptions="EndAndExpand">
        <VerticalStackLayout x:Name="layout" 
                             VerticalOptions="StartAndExpand" 
                             HorizontalOptions="Fill">
        </VerticalStackLayout>
        
        <VerticalStackLayout VerticalOptions="EndAndExpand" HorizontalOptions="Fill">
            <Entry x:Name="InputText"
               Completed="Entry_Completed"
               Text="Введите текст"
               VerticalOptions="End"
               TextColor="White"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>